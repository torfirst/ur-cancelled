<div class="mainContainer">
    <h3>Sign Up Below</h3>
    <div class="signupDiv">
        <form id="emailForm" action="/signup" method="post">
            <p class="formTitles">Email Address:</p>
            <label for="email"></label><br>
            <input type="text" id="emailInput" class="loginForm" name="email"><br>
            <span id="email" class="errorMsg red-text"></span><br>

            <p class="formTitles">Password:</p>
            <label for="password"></label><br>
            <input type="text" id="passwordInput" class="loginForm" name="password"><br>
            <span id="password" class="errorMsg red-text"></span><br>

            <p class="formTitles">Confirm Password:</p>
            <label for="password"></label><br>
            <input type="text" id="confirmPasswordInput" class="loginForm"><br>
            <span id="confirmPassword" class="errorMsg red-text"></span><br>

            <input type="button" id="validateBtn" class="button" value="Submit">
        </form>
        <a class="linkStyle" href="/login">Log In Instead</a>
    </div>
</div>
